{
    // === Workbench Settings ===
    "workbench.settings.useSplitJSON": true,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 14,
    "workbench.list.openMode": "doubleClick",
    "workbench.fontAliasing": "antialiased",
    "workbench.colorCustomizations": {
        "tab.activeBorderTop": "#ff00ee",
        "notebook.focusedCellBackground": "#0099ff30",
        "editor.lineHighlightBackground": "#008cff21",
        "editor.lineHighlightBorder": "#9fced11f",
        "tree.indentGuidesStroke": "#EBEBEB",
        "editor.findMatchBackground": "#8ffa876b",
        "editor.findMatchHighlightBackground": "#ff7dbe75",
        "sqltools.currentQueryBg": "#7b798a03"
    },
    "workbench.tree.enableStickyScroll": true,
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Monokai",
    "workbench.editor.alwaysShowEditorActions": true,
    // === Editor Settings ===
    "editor.fontFamily": "Menlo, DejaVu Sans Mono, Source Code Pro, Inconsolata, Monaco, Courier New, monospace",
    "editor.fontSize": 12,
    "editor.wordWrap": "on",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "solid",
    "editor.renderWhitespace": "all",
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.inlayHints.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.accessibilitySupport": "off",
    "editor.minimap.autohide": true,
    "editor.minimap.renderCharacters": false,
    "editor.folding": true,
    "editor.glyphMargin": true,
    "editor.rulers": [
        120
    ],
    "editor.stickyScroll.enabled": true,
    "editor.tokenColorCustomizations": {
        "comments": "#aaaaaa",
        "textMateRules": [
            {
                "scope": "heading.1.markdown entity.name.section.markdown, heading.1.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#e86f4f"
                }
            },
            {
                "scope": "heading.2.markdown entity.name.section.markdown, heading.2.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#f4a361"
                }
            },
            {
                "scope": "heading.3.markdown entity.name.section.markdown, heading.3.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#eac56a"
                }
            },
            {
                "scope": "heading.4.markdown entity.name.section.markdown, heading.4.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#269f91"
                }
            },
            {
                "scope": "heading.5.markdown entity.name.section.markdown, heading.5.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#5d99b0"
                }
            }
        ]
    },
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.formatOnSave": true,
    // === Terminal Settings ===
    "terminal.integrated.fontFamily": "Menlo,DejaVu Sans Mono, Source Code Pro, Inconsolata, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.persistentSessionScrollback": 100000000,
    "terminal.integrated.lineHeight": 1.5,
    // === Diff Editor Settings ===
    "diffEditor.wordWrap": "inherit",
    "diffEditor.experimental.showMoves": true,
    // === Explorer Settings ===
    "explorer.sortOrder": "foldersNestsFiles",
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    // === Notebook Settings ===
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.output.textLineLimit": 40,
    "notebook.output.lineHeight": 18,
    "notebook.stickyScroll.enabled": true,
    "notebook.diff.ignoreMetadata": true,
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "explicit",
        "notebook.source.organizeImports": "explicit"
    },
    "notebook.cellExecutionTimeVerbosity": "verbose",
    // === Git Settings ===
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.date.format": "ISO Date & Time",
    "git-graph.graph.style": "angular",
    "git-graph.maxDepthOfRepoSearch": 1,
    "git.autoStash": true,
    "git.autoRepositoryDetection": "openEditors",
    "git.openRepositoryInParentFolders": "always",
    "git.blame.statusBarItem.enabled": true,
    "git.autofetch": true,
    // === GitHub Settings ===
    "githubPullRequests.remotes": [
        "origin",
        "upstream"
    ],
    "githubPullRequests.pushBranch": "always",
    "githubPullRequests.pullBranch": "never",
    "githubPullRequests.fileListLayout": "tree",
    "githubIssues.queries": [
        {
            "label": "My Issues",
            "query": "is:open assignee:${user} repo:${owner}/${repository}",
            "groupBy": [
                "milestone"
            ]
        },
        {
            "label": "Created Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
        },
        {
            "label": "Recent Issues",
            "query": "state:open repo:${owner}/${repository} sort:updated-desc"
        }
    ],
    "github.copilot.enable": {
        "markdown": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.chat.edits.enabled": false,
    // === Language-Specific Settings ===
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    // "ruff.importStrategy": "useBundled",  // does not require separate installation
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true
    },
    "[jinja-yaml]": {
        "editor.formatOnSave": true
    },
    // === Python Analysis ===
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    // "python.analysis.extraPaths": [
    //     "/Users/luisaceituno/projects/",
    //     "${workspaceFolder}/src"
    // ],
    "python.analysis.autoFormatStrings": true,
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.exclude": [
        "**/venv/**",
        "**/.venv/**",
        "**/.vscode/**",
        "**/.git/**",
        "**/__pycache__/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/site-packages"
    ],
    // === Python Virtual Environment ===
    "python.envFile": "${workspaceFolder}/.venv",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // === Python Testing ===
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}/tests",
    "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
    // === Miscellaneous ===
    "update.mode": "manual",
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "window.zoomLevel": -1,
    "window.openFilesInNewWindow": "on",
    "window.commandCenter": false,
    // === Pylint ===
    "pylint.args": [
        // "--disable=W1203",
        // "--disable=W1405",
        "--max-line-length=120"
    ],
    "files.exclude": {
        "**/__pycache__": true
    },
    "files.autoSave": "onFocusChange",
    "debug.toolBarLocation": "docked",
    "terminal.integrated.tabs.hideCondition": "never"
}